{% extends "base.html.twig" %}

{% block stylesheets %}
    {# Inclure les liens vers le fichier CSS Bootstrap #}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        .custom-form {
            background-color: #272727;
            color: #ffffff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 0px 15px 0px #000000;
            margin: 0 auto;
            max-width: 400px;
            margin-top: 50px;
        }

        .custom-form h1 {
            font-size: 24px;
            margin-bottom: 30px;
        }

        .custom-form label {
            font-size: 14px;
            margin-bottom: 5px;
        }

        .custom-form input {
            font-size: 16px;
            padding: 10px;
            margin-bottom: 20px;
            background-color: #444444;
            border: none;
            border-radius: 8px;
            color: #ffffff;
        }

        .custom-form input[type="submit"] {
            background-color: #28a745;
            color: #ffffff;
            font-weight: bold;
        }

        .custom-form a {
            color: #007bff;
        }
    </style>
{% endblock %}

{% block body %}

<div class="container">
    <form method="post" class="form-signin custom-form">
        <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>

        <div class="text-center">
            <div>
                {{ form_row(form.username, {'attr': {'placeholder': 'Pseudo'}}) }}
            </div>
            <div>
                {{ form_row(form.email, {'attr': {'placeholder': 'Email'}}) }}
            </div>
            <div>
                {{ form_row(form.password, {'attr': {'placeholder': 'Password'}}) }}
            </div>
        </div>

        <div class="text-center">
            <input type="submit" class="btn btn-primary">
        </div>
    </form>
</div>

{% endblock %}
