{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        .containerForm {
            background-color: #272727;
            color: #ffffff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 0px 15px 0px #000000;
            margin: 0 auto;
            max-width: 400px;
            margin-top: 50px;
        }

        .FormInput {
            font-size: 16px;
            padding: 10px;
            margin-bottom: 20px;
            background-color: #444444;
            border: none;
            border-radius: 8px;
            color: #ffffff;
        }

        .container input[type="submit"] {
            background-color: #28a745;
            color: #ffffff;
            font-weight: bold;
        }
    </style>
{% endblock %}

{% block title "Fiche véhicule" %}

{% block body %}
<br/>
<center>
    <a href="{{ path('vehicule_list') }}" class="btn btn-secondary">Retour</a>
</center>
<div class="containerForm">
    <h1 class="text-center">Fiche véhicule</h1>
    {{ form_start(form) }}
    <div class="text-center">
        {{ form_row(form.titre , {'attr': {'placeholder': 'Titre', 'class': 'FormInput w-100'}, 'label': false}) }}
        {{ form_row(form.marque, {'attr': {'placeholder': 'Marque du véhicule', 'class': 'FormInput w-100'}, 'label': false}) }}
        {{ form_row(form.modele, {'attr': {'placeholder': 'Modèle du véhicule', 'class': 'FormInput w-100'}, 'label': false}) }}
        {{ form_row(form.description , {'attr': {'placeholder': 'Description', 'class': 'FormInput w-100'}, 'label': false}) }}
        {{ form_row(form.photo, {'attr': {'placeholder': 'Lien de la photo du véhicule', 'class': 'FormInput w-100'}, 'label': false}) }}
        {{ form_row(form.prix_journalier, {'attr': {'placeholder': 'Prix journalier', 'class': 'FormInput w-100'}, 'label': false}) }}
        <input type="submit" class="btn btn-primary btn-lg" value="{{btn}}">
    </div>
    {{ form_end(form) }}
</div>

{% endblock %}