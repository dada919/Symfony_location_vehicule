{% extends 'base.html.twig' %}

{% block title %}Résultats de recherche du {{ start_date }} au {{ end_date }}{% endblock %}

{% block stylesheets %}
<style>
    .vehicle-results {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 20px;
    }

    .vehicle {
        border: 1px solid #ccc;
        border-radius: 8px;
        margin: 10px;
        padding: 15px;
        width: 300px;
    }

    .vehicle img {
        width: 100%;
        border-radius: 8px;
        margin-bottom: 10px;
    }

    .vehicle-details {
        text-align: left;
    }

    .vehicle-price {
        margin-top: 10px;
        font-weight: bold;
    }

    .btn-reserver {
        display: inline-block;
        padding: 8px 16px;
        font-size: 14px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        background-color: #28a745;
        color: #fff;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    h1 {
        text-align: center;
        margin-top: 20px;
    }
</style>
{% endblock %}

{% block body %}
    <h1>Résultats de recherche du {{ start_date }} au {{ end_date }}</h1>

    <div class="vehicle-results">
        {% for vehicle in vehicles %}
            <div class="vehicle">
                <img src="{{ vehicle.photo }}" alt="Photo de {{ vehicle.titre }}" />
                <div class="vehicle-details">
                    <h3>{{ vehicle.titre }}</h3>
                    <p><strong>Marque:</strong> {{ vehicle.marque }}</p>
                    <p><strong>Modèle:</strong> {{ vehicle.modele }}</p>
                    <p><strong>Description:</strong> {{ vehicle.description }}</p>
                    <p class="vehicle-price">Prix journalier: {{ vehicle.prixJournalier }} €</p>
                    <center>
                        <a href="{{ path('confirm_reservation', {
                            'id': vehicle.idVehicule,
                            'start_date': start_date, 
                            'end_date': end_date
                        }) }}" class="btn btn-success">Réserver</a>
                    </center>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
